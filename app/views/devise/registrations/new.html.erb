<div class="col-md-12 col-sm-12 col-xs-12 center login-form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-6 col-sm-8 col-xs-12 z-depth-4">

  <div class="field">
        <%= f.label :profile_Pic %>
        <%= f.file_field :avatar %>
  </div>

  <div class="field col-md-12">
    <%= f.label :email, :class => 'left' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field col-md-12">
    <%= f.label :full_name, :class => 'left' %><br />
    <%= f.text_field :full_name %>
  </div>

  <div class="field col-md-12">
    <%= f.label :phone_number, :class => 'left' %><br />
    <%= f.text_field :phone_num %>
  </div>



  <div class="field col-md-12">
    <%= f.label :profile_picture, :class => 'left' %><br />
    <%= f.text_field :photo_url %>
  </div>

  <div class="field col-md-12">
    <%= f.label :address, :class => 'left' %><br />
    <%= f.text_field :address %>
  </div>

  <div calss="col-md-12 sign-up-form">
    <div class="field col-md-3 col-sm-3 col-xs-12">
      <%= f.label :city, :class => 'left' %><br />
      <%= f.text_field :city %>
    </div>

    <div class="field col-md-3 col-sm-3 col-xs-12">
      <%= f.label :state, :class => 'left' %><br />
      <%= f.text_field :state %>
    </div>

    <div class="field col-md-3 col-sm-3 col-xs-12">
      <%= f.label :zipcode, :class => 'left' %><br />
      <%= f.text_field :zipcode %>
    </div>
  </div>

  <div class="field col-md-12">
    <%= f.label :password, :class => 'left' %>
    <% if @minimum_password_length %>
    <em class = "left"> (<%=  @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :required => true %>
  </div>

  <div class="field col-md-12">
    <%= f.label :password_confirmation, :class => 'left' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="btn-group col-md-12" data-toggle="buttons-radio">
    <%= f.radio_button :org, "false", :id=>"first", :style=>"display:none;" %>
    <label for="first">I am a GiiGseeker</label>

    <%= f.radio_button :org, "true", :id=>"second", :checked => 'true', :style=>"display:none;" %>
    <label for="second">I am a GiiGmaker</label>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>


<% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>



