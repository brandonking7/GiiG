<!DOCTYPE html>
<html>
  <head>
	<title>Giig</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>

  <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


  </head>

  <body>
    <ul id="dropdown1" class="dropdown-content">
      <li><%= link_to 'Edit account', edit_user_registration_path, target: '_self' %></li>
      <li class="divider"></li>
      <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete', target: '_self' %></li>
    </ul>
    <nav>
      <div class="nav-wrapper">

        <!-- <a href="/" class="brand-logo">GiiG</a> -->
        <%= link_to 'GiiG', root_path, :class => 'brand-logo' %>

        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <% if user_signed_in? %>
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Dropdown<i class="material-icons right">arrow_drop_down</i></a></li>
            <% if current_user.org? %>
            <!--  ui-sref="locationsIndex({id: '<% current_user.id %>'})" -->
            <li><a ui-sref="locationsIndex">Locations</a></li>
            <% elsif %>
            <li><a ui-sref="skillsIndex">Skills</a></li>
            <% end %>
          <% end %>

        </ul>
        <ul class="side-nav" id="mobile-demo">
          <% if user_signed_in? %>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Edit account', edit_user_registration_path, target: '_self' %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete', target: '_self' %></li>
            <% if current_user.org? %>
            <!--  ui-sref="locationsIndex({id: '<% current_user.id %>'})" -->
            <li><a ui-sref="locationsIndex">Locations</a></li>
            <% elsif %>
            <li><a ui-sref="skillsIndex">Skills</a></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </nav>
 	<!-- <p class="notice"><%# notice %></p> -->
	<!-- <p class="alert"><%# alert %></p> -->

  <script>
        $(".dropdown-button").dropdown();
        $(".button-collapse").sideNav();
        $('select').material_select();
      </script>

	<%= yield %>
  </body>
</html>
