<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Position type</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Date</th>
      <th>Hourly wage</th>
      <th>Actual start time</th>
      <th>Actual end time</th>
      <th>User</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.position_type %></td>
        <td><%= job.description %></td>
        <td><%= job.start_time %></td>
        <td><%= job.end_time %></td>
        <td><%= job.date %></td>
        <td><%= job.hourly_wage %></td>
        <td><%= job.actual_start_time %></td>
        <td><%= job.actual_end_time %></td>
        <td><%= job.user_id %></td>
        <td><%= job.location_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
