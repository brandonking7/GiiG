            <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= image_tag( current_user.avatar.url, style: 'height: 35px; width: 35px; border: 1px solid white;border-radius: 50%;' ) %><i class="material-icons right">arrow_drop_down</i></a></li>
