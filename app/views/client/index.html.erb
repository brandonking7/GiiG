                <li><a ui-sref="jobseeker">Jobs</a></li>
                <li><a href="badges.html">Past Jobs</a></li>
              </ul>
            <% end %>
          <% else %>
          <ul class="right hide-on-med-and-down">
          <li><%= link_to "Sign Up", new_user_registration_path, target: '_self' %></li>
          <li><%= link_to "Log In", new_user_session_path, target: '_self' %></li>
          <% end %>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <% if user_signed_in? %>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Edit account', edit_user_registration_path, target: '_self' %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: 'delete', target: '_self' %></li>
            <% if current_user.org? %>
            <!--  ui-sref="locationsIndex({id: '<% current_user.id %>'})" -->
            <li><a ui-sref="locationsIndex">Locations</a></li>
            <% elsif %>
            <li><a ui-sref="skillsIndex">Skills</a></li>
            <% end %>
          <% end %>
        </ul>
